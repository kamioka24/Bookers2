<div class="col-xs-3">
	<h1>User info</h1>

	<table width="350">
		<tr><%= attachment_image_tag user, :profile_image, size: "150x150", fallback: "no_image.jpg"%></tr>
		<tr>
			<th>name:</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction:</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
		    <th>follows</th>
		    <th><%= link_to user.follower.count, following_user_path(user) %></th>
		</tr>
		<tr>
		    <th>followers</th>
		    <th><%= link_to user.followed.count, followers_user_path(user) %></th>
  		</tr>
	</table>
	<!-- フォローボタン -->
	<%= form_for(current_user.relationships.build) do |f| %>
	    <%= hidden_field_tag :follow_id, user.id %>
	    <!-- hidden_field_tagは、一個だけパラメータを他のアクションへ単体で渡したい時に使用 -->
	    <%= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>
	<% end %>
	<!-- %= link_to "表示させたい文字", user_relationships_path(user.id), method: :POST % -->
	<!-- link_toで作る場合はこれ一行。 -->

	<%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
		<%= hidden_field_tag :follow_id, user.id %>
		<!-- hidden_field_tagは、一個だけパラメータを他のアクションへ単体で渡したい時に使用 -->
		<%= f.submit 'フォロー外す', class: 'btn btn-danger btn-block' %>
	<% end %>

	<!-- %= link_to "表示させたい文字", user_relationships_path(user.id), method: :delete % -->
	<!-- link_toで作る場合はこれ一行。 -->

	<% if user.id == current_user.id %>
		<%= link_to edit_user_path(user.id) do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
	<% end %>

	<% if @post_book.errors.any? %>
		<%= @post_book.errors.count %>error prohibited this post_book from being saved:<br>
			<ul>
			<% @post_book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
	<% end %>

	<h1>New Book</h1>
	<%= form_for(post_book) do |f| %>
		<div class="new-book-form">
			<p>Title</p>
			<%= f.text_field :title %>

			<p>Opinion</p>
			<%= f.text_area :body %>

			<p><%= f.submit 'Create Book' %></p>
		</div>
	<% end %>
</div>