
<div class="container">
	<div class="row">
		<p><%= flash[:notice] %></p>
		<div class="col-xs-3">
			<h1>User info</h1>

			<%= attachment_image_tag @user, :profile_image, size: "150x150", fallback: "no_image.jpg"%>

			<p>name:<%= @user.name %></p>

			<p>introduction:<%= @user.introduction %></p>


			<% if @user.id == current_user.id %>
			        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
			<% end %>

			<h1>New Book</h1>
			<%= form_for(@post_book) do |f| %>
				<div class="new-book-form">
					<p>Title</p>
					<%= f.text_field :title %>

					<p>Opinion</p>
					<%= f.text_area :body %>

					<p><%= f.submit 'Create Book' %></p>
				</div>
			<% end %>
		</div>

		<div class="col-xs-9">
			<table>
				<h1>Books</h1>
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				</thead>
				<tbody>
				<% @post_books.each do |post_book| %>
					<tr align="left">
						<td><%= link_to user_path(post_book.user.id) do %>
						<%= attachment_image_tag post_book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
						<% end %>
						</td>
						<td><%= link_to post_book.title, post_book_path(post_book) %></td>
						<td><%= post_book.body %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>