<main>
	<h1>Editing Book</h1>

	<%= form_for(@post_book, url:"/post_books/#{@post_book.id}") do |f| %>
		<p>Title<br>
		<%= f.text_field :title %></p>

		<p>Opinion<br>
		<%= f.text_area :body %></p>

		<%= f.submit 'Update Book' %>

	<% end %>

	<p><%= link_to "Show", post_book_path(@post_book) %> |
	<%= link_to "Back", post_books_path %></p>
</main>